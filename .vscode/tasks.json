{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go Test in Docker (Current File)",
      "type": "shell",
      "command": "docker compose -f ./.docker/compose.yml exec api sh -c 'cd /app && go test -v ${relativeFile}'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "go",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^\\s*(.*):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
      ]
    },
    {
      "label": "Go Test in Docker (Package)",
      "type": "shell",
      "command": "docker compose -f ./.docker/compose.yml exec api sh -c 'cd /app && go test -v ${relativeFileDirname}'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "go",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^\\s*(.*):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
      ]
    },
    {
      "label": "Go Test in Docker (All)",
      "type": "shell",
      "command": "docker compose -f ./.docker/compose.yml exec api sh -c 'cd /app && go test -v ./...'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "go",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^\\s*(.*):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
      ]
    }
  ]
}
